{
  "expo": {
    "name": "ShakeMap",
    "slug": "ShakeMap",
    "version": "1.0.0",
    "orientation": "portrait",

    // ✅ App icon used on iOS, Android, web
    "icon": "./assets/images/icon.png",

    "scheme": "shakemap",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,

    // ✅ Global native background (splash, transitions)
    "backgroundColor": "#43C3A2", // mint

    "ios": {
      "supportsTablet": true
    },

    "android": {
      "adaptiveIcon": {
        // ✅ Use your adaptive icon + mint background
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#43C3A2"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
    },

    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },

    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          // ✅ Point to your real splash file
          "image": "./assets/images/splash.png",
          "imageWidth": 200,
          "resizeMode": "contain",

          // ✅ Same mint as background
          "backgroundColor": "#43C3A2",

          // Optional dark mode variant – use darker mint
          "dark": {
            "backgroundColor": "#118067"
          }
        }
      ]
    ],

    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    }
  }
}
